# VSCode なら拡張機能の「EditorConfig for VS Code」を入れると使えます。
# プロジェクト内で記法を統一する目的です。
root = true

[*]
charset = utf-8
end_of_line = lf

[*.{html,js,vue,json}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
